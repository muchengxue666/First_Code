{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-qt-project",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++17",
                "-I",
                "E:/Qt/6.9.3/mingw_64/include",
                "-I",
                "E:/Qt/6.9.3/mingw_64/include/QtCore",
                "-I",
                "E:/Qt/6.9.3/mingw_64/include/QtGui",
                "-I",
                "E:/Qt/6.9.3/mingw_64/include/QtWidgets",
                "${workspaceFolder}/main.cpp",
                "-o",
                "${workspaceFolder}/build/myapp.exe",
                "-L",
                "E:/Qt/6.9.3/mingw_64/lib",
                "-lQt6Core",
                "-lQt6Gui",
                "-lQt6Widgets",
                "-fPIC"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "使用 g++ 编译 Qt 应用程序"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "E:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ]
}